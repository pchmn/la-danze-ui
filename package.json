{
  "name": "la-danze-ui-monorepo",
  "version": "0.0.11",
  "author": "pchmn",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "husky install && rimraf ./.git/hooks && cp -r ./.husky/ ./.git/hooks/",
    "dev:lib": "yarn --cwd packages/lib start",
    "build:lib": "yarn --cwd packages/lib build",
    "test:lib": "yarn --cwd packages/lib test",
    "test:ci:lib": "yarn --cwd packages/lib test:ci",
    "dev:demo": "yarn --cwd packages/demo dev",
    "serve:demo": "yarn --cwd packages/demo serve",
    "build:demo": "yarn --cwd packages/demo build",
    "deploy:demo": "yarn --cwd packages/demo deploy",
    "dev:doc": "yarn --cwd packages/doc dev",
    "serve:doc": "yarn --cwd packages/doc serve",
    "build:doc": "yarn --cwd packages/doc build",
    "build": "yarn build:lib && yarn build:demo && yarn build:doc",
    "build:ci": "yarn build",
    "postbuild:ci": "rm -rf dist && mkdir dist && cp -r packages/doc/build/. dist && cp -r packages/demo/dist dist/demo"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "local-web-server": "^4.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.3.9",
    "symlink-dir": "^4.1.0",
    "@material-ui/core": "^5.0.0-alpha.24",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "framer-motion": "^3.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-hook-form": "^6.13.1",
    "react-router-dom": "^5.2.0",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "typescript": "^4.1.5",
    "debug": "^4.3.1",
    "eslint": "^7.20.0"
  },
  "workspaces": [
    "packages/*"
  ]
}