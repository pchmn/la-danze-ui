{
  "name": "la-danze-ui",
  "author": "pchmn",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/la-danze-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --tsconfig ./tsconfig.build.json",
    "postbuild": "copyfiles -e \"./src/core/theme/*.module.scss\" -f ./src/core/theme/*.scss ./dist/",
    "test": "tsdx test --coverage",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/la-danze-ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/la-danze-ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapper": {
      "^@core$": "<rootDir>/src/core/index.tsx",
      "^@animation$": "<rootDir>/src/animation/index.tsx",
      "^@drawer$": "<rootDir>/src/drawer/index.tsx",
      "^@form$": "<rootDir>/src/form/index.tsx"
    }
  },
  "dependencies": {
    "react-hookstore": "^1.5.1"
  },
  "devDependencies": {
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@material-ui/core": "^5.0.0-alpha.24",
    "@material-ui/icons": "^5.0.0-alpha.24",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.2",
    "@types/enzyme": "^3.10.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/history": "^4.7.8",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "autoprefixer": "^10.1.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^4.1.10",
    "enzyme": "^3.11.0",
    "framer-motion": "^3.0.0",
    "husky": "^4.3.7",
    "postcss": "^8.2.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-hook-form": "^6.13.1",
    "react-router-dom": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "sass": "^1.32.4",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0"
  },
  "peerDependencies": {
    "@material-ui/core": "^5.0.0-alpha.24",
    "@material-ui/icons": "^5.0.0-alpha.24",
    "framer-motion": "^3.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-hook-form": "^6.13.1",
    "react-router-dom": "^5.2.0"
  }
}